<%= form_for Post.new do |f| %>

<div class="form-group" >
  <label> Description </label>
  <%= f.text_field :description %>
</div>

<div class="form-group" >
  <%= f.file_field :image %>
</div> 
  <%= f.hidden_field :user_id, value: current_user.id, class: 'd_none' %>

<div class="text-center">
  <%= f.submit 'Create Post', class: 'btn btn-primary' %>
</div>

<br />

<div class="posts">
  <% @posts.each do |post| %>
  <section class="post" >

    <div class="user">
      <div class="avatar">
	<% if current_user.image_url != "missing.jpg" %>
  	 <%= link_to user_path(post.user) do %>
	    <%=image_tag post.user.image_url, class: "avatar"%>
	  <% end %>
        <% end %>
      </div>
      <div class="username">
	<%= link_to post.user.username, user_path(post.user) %>
      </div>
    </div>

    <%=image_tag post.image_url, class: 'main-image'%>

    <div class="description">
      <%= post.description %>
    </div>
    
  </section>
  <% end %>
</div>

<% end %>

